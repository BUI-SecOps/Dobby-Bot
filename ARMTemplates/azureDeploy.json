{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceplanName": {
            "defaultValue": "OlliePlan",
            "type": "string"
        },
        "keyVaultName": {
            "defaultValue": "Ollie-kv",
            "type": "string"
        },
        "botName": {
            "defaultValue": "Ollie-Bot",
            "type": "string"
        },
        "msaAppId": {
            "type": "string",
            "defaultValue": "<Please provide me>"
        },
        "msaAppSecret": {
            "type": "string",
            "defaultValue": "<Please provide me>"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.BotService/botServices",
            "apiVersion": "2021-05-01-preview",
            "name": "[parameters('botName')]",
            "location": "global",
            "sku": {
                "name": "F0"
            },
            "kind": "azurebot",
            "properties": {
                "displayName": "[parameters('botName')]",
                "iconUrl": "https://docs.botframework.com/static/devportal/client/images/bot-framework-default.png",
                "endpoint": "[concat('https://', parameters('botName'), '.azurewebsites.net/api/messages')]",
                "msaAppId": "[parameters('msaAppId')]",
                "schemaTransformationVersion": "1.3",
                "isCmekEnabled": false,
                "isIsolated": false,
                "disableLocalAuth": false
            },
            "resources": [
                {
                    "type": "Microsoft.BotService/botServices/channels",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat(parameters('botName'),'/WebChatChannel')]",
                    "location": "global",
                    "dependsOn": [
                        "[resourceId('Microsoft.BotService/botServices', parameters('botName'))]"
                    ],
                    "properties": {
                        "properties": {
                            "sites": [
                                {
                                    "siteName": "Default Site",
                                    "isEnabled": true,
                                    "enablePreview": null
                                }
                            ]
                        },
                        "channelName": "WebChatChannel"
                    }
                },
                {
                    "type": "Microsoft.BotService/botServices/channels",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat(parameters('botName'),'/MsTeamsChannel')]",
                    "location": "global",
                    "dependsOn": [
                        "[resourceId('Microsoft.BotService/botServices', parameters('botName'))]"
                    ],
                    "properties": {
                        "properties": {
                            "enableCalling": false,
                            "isEnabled": true
                        },
                        "channelName": "MsTeamsChannel"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-06-01-preview",
            // "name": "bot-secrets-iqpf43",
            "name": "[concat(parameters('keyVaultName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": false,
                "vaultUri": "[concat('https://', parameters('keyVaultName'), '.vault.azure.net/')]",
                "provisioningState": "Succeeded"
            },
            "resources": [
                {
                    "type": "Microsoft.KeyVault/vaults/secrets",
                    "apiVersion": "2021-06-01-preview",
                    // "name": "bot-secrets-iqpf43/bot-tc-test-Ollie-pwd-ftudbv",
                    "name": "[concat(parameters('keyVaultName'), '/Ollie-pwd')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
                    ],                    
                    "properties": {
                        "attributes": {
                            "enabled": true
                        },
                        "value": "[parameters('msaAppSecret')]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-01-15",
            "name": "[parameters('serviceplanName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "size": "S1",
                "family": "S",
                "capacity": 1
            },
            "kind": "windows",
            "properties": {
                "perSiteScaling": false,
                "elasticScaleEnabled": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-01-15",
            "name": "[parameters('botName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serviceplanName'))]"
            ],
            "kind": "app",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serviceplanName'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": false,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        }
    ]
}